{
    "name": "hyvor/internal",
    "description": "Internal Package for HYVOR Applications",
    "type": "library",
    "license": "MIT",
    "minimum-stability": "dev",
    "autoload": {
        "psr-4": {
            "Hyvor\\Internal\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Hyvor\\Internal\\Tests\\": "tests"
        }
    },
    "authors": [
        {
            "name": "Supun",
            "email": "supun@hyvor.com"
        }
    ],
    "require-dev": {
        "orchestra/testbench": "^8.0",
        "phpstan/phpstan": "^1.10",
        "pestphp/pest": "^2.25"
    },
    "extra": {
        "laravel": {
            "providers": [
                "Hyvor\\Internal\\InternalServiceProvider",
                "Hyvor\\Internal\\Internationalization\\InternationalizationServiceProvider"
            ]
        }
    },
    "config": {
        "allow-plugins": {
            "pestphp/pest-plugin": true
        }
    },
    "require": {
        "php": ">8.3",
        "ext-intl": "*",
        "guzzlehttp/guzzle": "^7.8",
        "timacdonald/log-fake": "^v2.3.0"
    }
}
